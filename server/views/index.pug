extends layout

block header
  // Header
  header.flex.items-center.justify-between.px-6.py-4
    .flex.items-center.space-x-4
      h1.text-2xl.font-serif.text-gray-100 Saleté Sincère
      a.text-sm.text-cream.underline(href="/manifeste") Manifeste
    button(class="p-2 focus:outline-none text-gray-100", aria-label="Menu")
      svg.w-6.h-6(fill="none", stroke="currentColor")
        path(d="M4 6h16M4 12h16M4 18h16")

block content
  // Hero
  section.bg-cream.mx-6.rounded-xl.p-8.text-center.space-y-4.text-gray-900
    p(class="text-xl md:text-2xl font-serif") Vos histoires méritent d'être entendues.
    p.italic Brutes, sincères, sans filtre.
    button(class="mt-4 px-6 py-3 bg-orange-500 rounded-full text-white font-semibold hover:bg-orange-600 transition")
      | + Enregistrer votre histoire
    p.text-sm.font-medium 1 234 récits partagés · 567 écoutes ce mois-ci

  // Filters
  nav.flex.justify-center.gap-4.mt-6
    button.px-4.py-2.bg-yellow-400.text-gray-900.rounded-full Wafer
    button.px-4.py-2.bg-gray-700.text-white.rounded-full Charbon
    button.px-4.py-2.bg-gray-700.text-white.rounded-full Tous

  // Feed
  main.mt-6.space-y-4.px-6.pb-8
    article(class="flex items-center justify-between bg-gray-800 rounded-lg p-4 hover:shadow-lg transition")
      .flex.items-center.space-x-4
        .p-2.bg-gray-700.rounded-full
          svg.w-5.h-5.text-cream(fill="currentColor")
            path(d="M9 19V6l12-2v15")
        div
          h2.font-serif.text-lg.text-gray-100 Un jour de boîte à jouet
          p.text-sm.text-gray-400
            | 0:30 · 
            span(class="px-2 py-0.5 bg-yellow-400 text-gray-900 rounded-full text-xs") Wafer
      button.flex.items-center.space-x-1.text-orange-500.font-semibold(aria-label="Voter")
        span +1
        svg.w-4.h-4(fill="currentColor")
          path(d="M5 12h14M12 5l7 7-7 7")
    
    article(class="flex items-center justify-between bg-gray-800 rounded-lg p-4 hover:shadow-lg transition")
      .flex.items-center.space-x-4
        .p-2.bg-gray-700.rounded-full
          svg.w-5.h-5.text-cream(fill="currentColor")
            path(d="M9 19V6l12-2v15")
        div
          h2.font-serif.text-lg.text-gray-100 Quand j'ai croisé un chaton
          p.text-sm.text-gray-400
            | 0:45 · 
            span(class="px-2 py-0.5 bg-gray-700 text-white rounded-full text-xs") Charbon
      button.flex.items-center.space-x-1.text-orange-500.font-semibold(aria-label="Voter")
        span +1
        svg.w-4.h-4(fill="currentColor")
          path(d="M5 12h14M12 5l7 7-7 7")
