extends ../layout

block header
  // Header
  header.flex.items-center.justify-between.px-6.py-4
    a(href="/", class="text-2xl font-brush font-bold text-[#F2F2EF] hover:text-[#D6B977] transition") Saleté Sincère
    .flex.items-center.gap-6
      a(class="text-sm text-[#D6B977] underline hover:text-[#B99E5A] transition", href="/") Retour à l'accueil

block content
  main.max-w-lg.mx-auto.px-6.py-12
    // Error state
    .text-center.mb-8
      .inline-flex.items-center.justify-center.w-16.h-16.bg-red-600.rounded-full.mb-4
        svg(class="w-8 h-8 text-white", fill="none", stroke="currentColor", viewBox="0 0 24 24")
          path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L3.349 16.5c-.77.833.192 2.5 1.732 2.5z")
      
      h1(class="text-2xl font-brush font-bold text-[#F2F2EF] mb-4") Oops, une erreur !
    
    // Error message
    .bg-red-900.border.border-red-600.rounded-lg.p-6.text-center.mb-6
      p(class="text-base text-red-200 mb-2") 
        strong Erreur :
      p(class="text-red-100") #{error}
    
    // Actions
    .text-center.space-y-4
      if backLink
        a(
          href=backLink,
          class="inline-block px-6 py-3 bg-[#D6B977] hover:bg-[#B99E5A] text-[#0B0B0B] font-semibold rounded-lg transition hover:scale-105"
        )
          | Réessayer
      else
        a(
          href="/newsletter",
          class="inline-block px-6 py-3 bg-[#D6B977] hover:bg-[#B99E5A] text-[#0B0B0B] font-semibold rounded-lg transition hover:scale-105"
        )
          | Retour au formulaire
      
      p.text-sm.text-gray-400
        | Ou 
        a(href="/", class="text-[#D6B977] underline hover:text-[#B99E5A] transition") retourner à l'accueil