                <script type="module">
                    import WaveSurfer from 'https://cdn.jsdelivr.net/npm/wavesurfer.js@7/dist/wavesurfer.esm.js';
                    
                    (function() {
                        const episodeId = '{{episodeData.season}}-{{episodeData.episode}}';
                        const originalUrl = '{{{episodeData.audioUrl}}}'; // Triple braces pour √©viter HTML encoding
                        const proxyUrl = `/api/audio/proxy?url=${encodeURIComponent(originalUrl)}`;
                        
                        console.log('üéµ Loading audio via proxy:', proxyUrl);
                        
                        const wavesurfer = WaveSurfer.create({
                            container: '#waveform-' + episodeId,
                            url: proxyUrl,
                            waveColor: '#F1F1F199',                    // Gris fonc√© (non jou√©)
                            progressColor: '#a855f7',                  // Purple solid (partie jou√©e)
                            cursorColor: '#c084fc',                    // Purple-400 pour le curseur
                            barWidth: 3,
                            barGap: 2,
                            height: 60,
                            normalize: true,
                            backend: 'WebAudio',
                            barRadius: 3,                              // Barres arrondies
                            dragToSeek: true                           // Click to seek
                        });
                        
                        const playBtn = document.getElementById('playBtn-' + episodeId);
                        const playIcon = document.getElementById('playIcon-' + episodeId);
                        const pauseIcon = document.getElementById('pauseIcon-' + episodeId);
                        const timeDisplay = document.getElementById('time-' + episodeId);
                        
                        // Play/Pause
                        playBtn.addEventListener('click', () => {
                            wavesurfer.playPause();
                        });
                        
                        wavesurfer.on('play', () => {
                            playIcon.classList.add('hidden');
                            pauseIcon.classList.remove('hidden');
                        });
                        
                        wavesurfer.on('pause', () => {
                            playIcon.classList.remove('hidden');
                            pauseIcon.classList.add('hidden');
                        });
                        
                        wavesurfer.on('audioprocess', () => {
                            const currentTime = wavesurfer.getCurrentTime();
                            const duration = wavesurfer.getDuration();
                            timeDisplay.textContent = formatTime(currentTime) + ' / ' + formatTime(duration);
                        });
                        
                        wavesurfer.on('ready', () => {
                            console.log('‚úÖ Waveform ready');
                            const duration = wavesurfer.getDuration();
                            timeDisplay.textContent = '0:00 / ' + formatTime(duration);
                            
                            // Fade out loader et fade in waveform
                            const loader = document.getElementById('waveform-loader-' + episodeId);
                            const waveformEl = document.getElementById('waveform-' + episodeId);
                            
                            if (loader) {
                                loader.style.opacity = '0';
                                loader.style.transition = 'opacity 0.3s';
                                setTimeout(() => loader.style.display = 'none', 300);
                            }
                            
                            if (waveformEl) {
                                waveformEl.style.opacity = '1';
                            }
                        });
                        
                        wavesurfer.on('error', (error) => {
                            console.error('‚ùå Waveform error:', error);
                        });
                        
                        function formatTime(seconds) {
                            if (isNaN(seconds) || !isFinite(seconds)) return '0:00';
                            const mins = Math.floor(seconds / 60);
                            const secs = Math.floor(seconds % 60);
                            return mins + ':' + (secs < 10 ? '0' : '') + secs;
                        }
                    })();
                </script>
