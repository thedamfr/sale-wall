{
  "name": "salete-sincere-monorepo",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=server",
    "build:client": "npm run build --workspace=client",
    "build:server": "vite build --ssr src/main.js",
    "build": "npm run build:client && npm run build:server",
    "start": "node server/dist/index.js"
  },
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "@fastify/vite": "^4.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.2",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "@fastify/proxy-addr": "^5.0.0",
    "dequal": "^2.0.3"
  }
}
